@model ServiceReqApp.Infrastructure.DTO.AdminDto

@{
    ViewData["Title"] = "Index";
}


<table class="table">
    <h4>Список пользователей</h4>
    <thead>
    <tr>
        <th>
            <p>Идентификатор пользователя</p>
        </th>
        <th>
            <p>Имя пользователя</p>
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Users)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                <a asp-action="EditUser" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="DeleteUser" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<table class="table">
    <h4>Список пользователей</h4>
    <thead>
        <tr>
            <th>
                <p>Идентификатор клиента</p>
            </th>
            <th>
                <p>Наименование организации</p>
            </th>
            <th>
                <p>Адресс</p>
            </th>
            <th>
                <p>Номер телефона</p>
            </th>
            <th>
                <p>Информация</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Customers)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerInfo)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
            </td>
        </tr>
        }
    </tbody>
</table>

